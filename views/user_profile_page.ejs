
  

    <%- include("./common/header.ejs",{style_css:style_css}); %>

    <%- include("./common/nav-bar.ejs"); %>

    

    <main>


        <div class="container mt-1">
            <div class="row bg-dark border border-dark">
                <div class="col-3 border border-white">
                    
                    <img src="<%= user_profile_data.image_path; %>" class="img-fluid" alt="">
                    
                </div>

                <div class="col d-flex justify-content-center align-items-center">
                    <h1 class="text-white fw-bold"><%= user_profile_data.user_fname%> <%= user_profile_data.user_lname%></h1>
                </div>
            </div>


            <div class="row">
                <div class="col-3 border border-white bg-dark">
                    <h3 class="text-white fw-bold">Username</h3>
                </div>

                <div class="col border border-dark d-flex justify-content-center align-items-center">
                    <h4 class="text-dark fw-bold"><%= user_profile_data.username; %></h4>
                </div>
            </div>

            <div class="row">
                <div class="col-3 border border-white bg-dark">
                    <h3 class="text-white fw-bold">Age</h3>
                </div>

                <div class="col border border-dark d-flex justify-content-center align-items-center">
                    <h4 class="text-dark fw-bold"><%= user_profile_data.user_age; %></h4>
                </div>
            </div>

            <div class="row">
                <div class="col-3 border border-white bg-dark">
                    <h3 class="text-white fw-bold">Date Of Birth</h3>
                </div>

                <div class="col border border-dark d-flex justify-content-center align-items-center">
                    <h4 class="text-dark fw-bold"><%= user_profile_data.user_dob; %></h4>
                </div>
            </div>

            <div class="row">
                <div class="col-3 border border-white bg-dark">
                    <h3 class="text-white fw-bold">E-Mail</h3>
                </div>

                <div class="col border border-dark d-flex justify-content-center align-items-center">
                    <h4 class="text-dark fw-bold"><%= user_profile_data.user_email; %></h4>
                </div>
            </div>


            <div class="row">
                <div class="col-3 border border-white bg-dark">
                    <h3 class="text-white fw-bold">Gender</h3>
                </div>

                <div class="col border border-dark d-flex justify-content-center align-items-center">
                    <h4 class="text-dark fw-bold"><%= user_profile_data.user_gender; %></h4>
                </div>
            </div>
            
            

        </div>
        

    </main>


    <%- include("./common/footer.ejs",{script_name:script_name}); %>


 